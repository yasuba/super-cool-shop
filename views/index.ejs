<!DOCTYPE html>
<html lang="en">
  <head>
    <% include head.ejs %>
  </head>

  <body class="container-fluid">

  <header>
    <% include header.ejs %>
    <form class="col-md-4 col-md-offset-1" id="checkout" method="post" action="/checkout">
      <p id="cart-text">My Cart: <span id="item-count">0</span> items &pound;<input id="price" name="balance" value="0.00"></p>
      <input type="hidden" id="itemCategory" value="" name="itemCategory">
      <button class="btn btn-primary btn-s" id="checkoutButton">Shopping Bag</button>
      </form>
    </section>
  </header>

  <main>

    <div class="error"></div>
    <% result.forEach(function(item) { %>
    <section  data-name="<%= item[0] %>" class="col-xs-6 col-md-4 item">
  <h3><%= item[1].name %></h3><a href="/products/<%= item[0] %>"><img src="<%= item[1].image_url %>"></a>
  <p>Price: Â£<%= item[1].price %></p>
  </form>
  <form class="buying">
    <button class="add btn btn-primary">Add</button>
    <button class="remove btn btn-primary">Remove</button>
  </form>
</section>
<% }); %>

  </main>

  <% include footer.ejs %>

  </body>

  <footer>
    <p>Maya 2015</p>
  </footer>

</html>




